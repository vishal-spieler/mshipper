        <script type="text/javascript">
            $(document).ready(function () {
                $("#otptxt").hide();
                $("#btnOtp").hide();
                $("#btnPass").hide();
                $("#passtxt").hide();
                $("#cpasstxt").hide();
                $("#btnForgetPass").click(function () {
                    document.getElementById("otpLabel").innerHTML = "";
                    var mobile = $("#mobile").val();
                    var msg = "";
                    $.ajax({
                        url: '/home/UpdateMobile',
                        data: { 'mobile': mobile },
                        type: "post",
                        cache: false,
                        success: function (data) {
                            msg = data;
                            if (msg == "This is not a registered number") {
                                document.getElementById("otpLabel").innerHTML = msg;
                            }
                            if(msg=="Success")
                                {
                               
                                $("#mobile").hide();
                            $("#btnForgetPass").hide();
                            $("#otptxt").show();
                            $("#btnOtp").show();
                        }
                        },
                        error: function () {
                           // alert("Error");
                        }
                    });


                });

            });
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#btnOtp").click(function () {
                    document.getElementById("otpLabel").innerHTML = "";
                    var otptxt = $("#otptxt").val();
                    var msg = "";
                    if (otptxt != "" || otptxt != null) {
                        $.ajax({
                            url: '/home/MatchOtp',
                            data: { 'otptxt': otptxt },
                            type: 'post',
                            dataType: "html",
                            cache: false,
                            success: function (data) {
                                msg = data;                                
                                if (msg == "Otp Doesn't Match")
                                { document.getElementById("otpLabel").innerHTML = msg; }
                                if (msg == "Otp Is Match") {
                                    $("#passtxt").show();
                                    $("#cpasstxt").show();
                                    $("#btnPass").show();
                                    $("#otptxt").hide();
                                    $("#btnOtp").hide();
                                }
                                //alert(msg);
                            },
                            error: function () {
                               
                            }
                        });



                    }
                });

            });
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $("#btnPass").click(function () {
                    document.getElementById("otpLabel").innerHTML = "";
                    var newpass = $("#passtxt").val();
                    var cpass = $("#cpasstxt").val();
                    var mobile = $("#mobile").val();
                    var msg = "";
                    if (newpass == cpass) {
                        $.ajax({
                            url: '/home/UpdatePass',
                            data: { 'passtxt': newpass,'mobile':mobile },
                            type:'post',
                            cache: false,
                            success: function (data) {
                                msg = data;
                                if(msg=="Success")
                                {
                                    document.getElementById("otpLabel").innerHTML = "Password Is Update Please Login";
                                    window.setTimeout(function () { location.reload() }, 3000);
                                }
                            },
                            error: function () {

                            }
                        });
                    }
                    else {
                        alert("Password Doesn't Match");
                    }
                });
            });
        </script>
